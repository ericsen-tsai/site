    "next": "^15.1.9"
  },
  "devDependencies": {
    "@erichandsen/eslint-config": "workspace:*",
    "@erichandsen/tsconfig": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,json}": "eslint --fix"
