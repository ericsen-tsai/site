{
  "name": "@erichandsen/utils",
  "version": "0.0.1",
  "description": "The utility functions for Ericsen's projects",
  "author": "Ericsen Tsai <bommer95175@gmail.com> (https://github.com/ericsen-tsai/)",
  "homepage": "https://github.com/ericsen-tsai/site#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericsen-tsai/site.git"
  },
  "bugs": {
    "url": "https://github.com/ericsen-tsai/site/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf .turbo dist",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit"
  },
  "sideEffects": false,
  "types": "./dist/index.d.ts",
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@erichandsen/eslint-config": "workspace:*",
    "@erichandsen/tsconfig": "workspace:*",
    "@types/node": "^20"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,json}": "eslint --fix",
    "**/*": "prettier --write --ignore-unknown"
  }
}